<launch>

  <node name="rostopic_publisher" pkg="rostopic" type="rostopic" args="pub /test/topic std_msgs/String 'Started' -r 1" clear_params="True">
    <param name="capability_group" value="autostart" />
    <param name="default_cfg/autostart/delay" value="5.0" />
  </node>

  <node name="rostopic_echo" pkg="rostopic" type="rostopic" args="echo /test/topic" clear_params="True">
    <param name="capability_group" value="autostart" />
    <param name="default_cfg/autostart/delay" value="5.0" />
    <param name="default_cfg/autostart/required/publisher" value="/test/topic" />
  </node>

</launch>
